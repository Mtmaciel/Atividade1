@{
    ViewBag.Title = "Cadastrar";
}

<h2>Gravar</h2>
    
 <form method="post" action="Gravar">
     <div class="form-horizontal">
         <h4>Aluno</h4>
         <hr />
         <div class="form-group">
             <label class="control-label col-md-2" for="nome">Nome:</label>
             <div class="col-md-10">
                 <input class="form-control" id="nome" type="text" name="Aluno.Nome" />
             </div>
         </div>
         <div class="form-group">
             <label class="control-label col-md-2" for="idade">Idade:</label>
             <div class="col-md-10">
                 <input class="form-control" id="idade" type="number" name="Aluno.Idade" />
             </div>
         </div>
         <div class="form-group">
             <label class="control-label col-md-2" for="turma">Turma:</label>
             <div class="col-md-10">
                 <input class="form-control" id="turma" type="text" name="Aluno.Turma" />
             </div>
         </div>
         <div class="form-group">
             <div class="col-md-offset-2 col-md-10">
                 <input type="submit" value="Criar" class="btn btn-default" />
             </div>
         </div>
     </div>
 </form>

<div>
    @Html.ActionLink("Voltar para listagem", "Index")
</div>
