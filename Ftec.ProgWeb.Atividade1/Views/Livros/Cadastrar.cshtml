@{
    ViewBag.Title = "Cadastrar";
}

<h2>Gravar</h2>

<form method="post" action="Gravar">
    <div class="form-horizontal">
        <h4>Aluno</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2" for="titulo">Titulo:</label>
            <div class="col-md-10">
                <input class="form-control" id="titulo" type="text" name="Livro.Titulo" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="genero">Genêro:</label>
            <div class="col-md-10">
                <input class="form-control" id="genero" type="text" name="Livro.Genero" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Ano">Ano:</label>
            <div class="col-md-10">
                <input class="form-control" id="Ano" type="number" name="Livro.Ano" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="paginas">Paginas:</label>
            <div class="col-md-10">
                <input class="form-control" id="paginas" type="number" name="Livro.Paginas" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Voltar para listagem", "Index")
</div>
