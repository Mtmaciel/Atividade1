@model List<Ftec.ProgWeb.Atividade1.Models.Livro>
@{
    ViewBag.Title = "Livro";
}
<div id="header">
    <h2>Livros</h2>
    <br />
    @Html.ActionLink("Cadastrar Novo Livro", "Cadastrar");
    <br />
    <form method="get" action="Livros/Procurar">
        <div class="col-md-12">
            <input class="col-xs-11 form-control" id="busca" type="text" name="busca" />
            <input type="submit" value="Procurar" class="col-xs-1 btn btn-default" />
        </div>
    </form>
</div>
<hr />
<div id="list_Livros">
    <div id="list-header" class="col-xs-12 form-group">
        <span class="col-xs-2"><b>Código</b></span>
        <span class="col-xs-3"><b>Titulo</b></span>
        <span class="col-xs-2"><b>Genêro</b></span>
        <span class="col-xs-2"><b>Páginas</b></span>
        <span class="col-xs-2"><b>Ano</b></span>
    </div>
    @{ if (Model != null)
        {
            foreach (var Livro in Model)
            {
        <div class="col-xs-12 form-group" id="Livro-@Livro.Codigo">
            <span class="col-xs-2">@Livro.Codigo</span>
            <span class="col-xs-3">@Livro.Titulo</span>
            <span class="col-xs-2">@Livro.Genero</span>
            <span class="col-xs-2">@Livro.Paginas</span>
            <span class="col-xs-2">@Livro.Ano</span>
            <a class="btn  btn-default btn-xs" href="@Url.Action("Excluir", "Livros", new { codigo = Livro.Codigo })">Excluir</a>
        </div>
            }
        }
    }
</div>
